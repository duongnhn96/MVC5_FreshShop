@using WebAPP.Models;
@model List<GioHang>
@{
    ViewBag.Title = "Giỏ hàng";
        Layout = "~/Views/Shared/IndexLaypout.cshtml";
    
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="chitietsanpham">
                <center>
                    <span style="color:crimson;font-size:30px">
                        Danh sách sản phẩm đã đặt
                    </span>
                </center>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Tên sản phẩm</th>
                                    <th>Hình ảnh</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                    <th>Thành tiền</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (GioHang item in Model)
                                {
                                    <tr id="row_@item.MaSP">
                                        <td>@item.TenSP</td>
                                        <td><img src="@Url.Content("~/"+item.HinhAnh)" width="75" height="75" alt="No Images" /></td>
                                        @using (Html.BeginForm("CapNhat", "GioHang", new { maSp = item.MaSP, url = Request.Url.ToString() }))
                                        {
                                            <td><input class="form-control" type="number" value="@item.SoLuong" name="SoLuong" width="10" /></td>
                                            <td>@item.DonGia</td>
                                            <td>@item.ThanhTien</td>
                                            <td><a href="@Url.Action("XoaSanPham", "GioHang", new { maSp = item.MaSP})"><input class="btn btn-danger" type="button" value="XÓA" /></a></td>
                                            <td><input class="btn btn-primary" type="submit" value="Cập Nhật" /></td>
                                        }
                                    </tr>
                                }

                            </tbody>
                            <tr>
                                <th>TỔNG CỘNG</th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th> @ViewBag.ThanhTien</th> <!-- chua hien thi-->
                                <th></th>
                            </tr>
                        </table>
                        <th><a href="@Url.Action("DatHang", "GioHang")"><input type="button" value="MUA HÀNG" class="button pull-right" /></a></th>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>

    </div>
</div>

    