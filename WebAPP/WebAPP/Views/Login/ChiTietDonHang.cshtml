@using WebAPP.Models;
@model List<ChiTietDonHang>
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/IndexLaypout.cshtml";

}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="chitietsanpham">
                <center>
                    <span style="color:crimson;font-size:30px">
                        Chi tiết đơn hàng
                    </span>
                </center>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Mã đơn hàng</th>
                                    <th>Sản phẩm</th>
                                    <th>Hình ảnh</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                    <th>Tổng tiền</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (ChiTietDonHang item in Model)
                                {
                                    <tr id="row_@item.MaDH">
                                        <td>@item.MaDH</td>
                                        <td>@item.SanPham.TenSP</td>
                                        <td><img src="@Url.Content("~/"+item.SanPham.HinhAnh)" width="75" height="75" alt="No Images" /></td>

                                        <td>@item.SoLuong</td>
                                        <td>@item.DonGia</td>
                                        <td>@(item.SoLuong * item.DonGia)</td>

                                    </tr>
                                }

                            </tbody>
                            <tr>
                                <td>TỔNG CỘNG</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td> @ViewBag.tongtien</td> <!-- chua hien thi-->

                            </tr>
                        </table>

                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>

    </div>
</div>



