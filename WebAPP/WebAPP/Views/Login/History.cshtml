@using WebAPP.Models;
@model List<DonHang>
@{
    ViewBag.Title = "Lịch sử mua hàng";
        Layout = "~/Views/Shared/IndexLaypout.cshtml";
    
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="chitietsanpham">
                <center>
                    <span style="color:crimson;font-size:30px">
                       
                              @ViewBag.ThongBao
                        
                    </span>
                </center>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Mã đơn hàng</th>
                                    <th>Ngày đặt</th>
                                    <th>Ngày giao</th>
                                    <th>Đia chỉ</th>
                                    <th>Tình Trạng</th>
                                    <th>Tổng tiền</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                               @foreach (DonHang item in Model)
                               {
                                    <tr id="row_@item.MaDH">
                                        <td>@item.MaDH</td>
                                        <td>@item.NgayDat</td>
                                        <td>@item.NgayGiao</td>
                                        <td>@item.DiaChi</td>
                                        <td>@item.TinhTrang</td>
                                        <td>@item.TongTien.ToString()</td>
                                        <td><a href="@Url.Action("ChiTietDonHang", "Login", new { id = item.MaDH })"><i class="btn btn-danger">Chi tiết đơn hàng</i></a></td>
                                </tr>
                               }
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>

    </div>
</div>
