@{
    Layout = null;
}

@using WebAPP.Models;
@{
    FreshEntities db = new FreshEntities();
    List<LoaiSp> Loai = (from loaisp in db.LoaiSp
                         select loaisp).ToList();
}
<!doctype html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="fb:app_id" content="379522252443436" />
    <meta property="fb:admins" content="100010820613834>"/>
    <title>Fresh Shop - @ViewBag.Title</title>
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" type='text/css' />
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <!-- FB CMT -->
    <!-- Facebook JavaScript SDK -->
    <script>
    (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
