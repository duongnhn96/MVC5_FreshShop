
@using WebAPP.Models;
@{
    FreshEntities db = new FreshEntities();
    List<LoaiSp> Loai = (from loaisp in db.LoaiSp
                         select loaisp).ToList();
}
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/IndexLaypout.cshtml";


    <!--BANNER-->
    @section header{
   

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active">
                <img src="~/image/slide-img.jpg" style="width:100%;height:400px">
                <div class="carousel-caption">
                    <h1>SẢN PHẨM SIÊU SẠCH</h1>
                </div>
            </div>

            <div class="item">
                <img src="~/Data/slider4.jpg" style="width:100%;height:400px">

                <div class="carousel-caption">
                    <h1>KIỂM ĐỊNH KĨ CÀNG</h1>

                </div>
            </div>

            <div class="item">
                
                <img src="~/Data/_image.jpg" style="width:100%;height:400px ">

                <div class="carousel-caption">
                    <h1>ĐẢM BẢO AN TOÀN SỨC KHỎE</h1>

                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    }

}
@section PR{

    @* Thanh gioi thieu *@
    <div id="feature1">
        <div class="tieude1">CAM KẾT</div>
        <center><img src="~/Data/TIEUDE.png" /></center>
        <br/>
        <div class="container">
            <div class="col-md-4">
                <img src="~/Data/food-and-neverage-png-17.png" alt="" class="img-reponsive img-circle center-block" width="90" height="90" />
                <h3><b>Thực phẩm sạch và an toàn</b></h3>
                <h4>Luôn được bảo quản tươi sạch từ những nhà cung cấp hàng đầu, đã qua kiểm định và đảm bảo an toàn vệ sinh thực phẩm </h4>
            </div>
            <div class="col-md-4">
                <img src="~/Data/product25-512.png" alt="" class="img-reponsive img-circle center-block" width="90" height="90" />
                <h3><b>Miễn phí vận chuyển</b></h3>
                <h4>Đội ngũ tư vấn và vận chuyển hoạt động 24/7 đảm bảo sản phẩm đến tay người dùng tại TPHCM trong thời gian ngắn nhất</h4>
            </div>
            <div class="col-md-4">

                <img src="~/Data/commision-icon.png" alt="" class="img-reponsive img-circle center-block" width="90" height="90" />
                <h3><b>Hoàn tiền 200%</b></h3>
                <h4>Hoàn tiền nếu phát hiện sản phẩm chứa chất bảo quản độc hại, quá hạn sữ dụng hoặc thiếu an toàn vệ sinh thực phẩm</h4>
            </div>
        </div>
    </div> @* ///Thanh gioi thieu *@
}


@section SanPhamMoi{
    <div style="position:relative">

            <div class="top_brand">
                <center><img src="~/Data/tt1.png" /></center>
                <div class="tieude"><p>SẢN PHẨM MỚI</p></div>
 
                <div class="container">
                    <div class="row">
                        @foreach (SanPham sp in Model)
                        {

                            <div class="col-sm-4">
                                <div id="item">
                                    <div class="khung">
                                        <img src="@Url.Content("~/"+sp.HinhAnh)" class="hinh">
                                        <div class="giua">
                                            <div class="chu">
                                                <a href="@Url.Action("ThemGioHang", "GioHang", new { maSp = sp.MaSP, url = Request.Url.ToString() })"><i class="fa fa-shopping-basket" aria-hidden="true"></i></a>
                                            </div>
                                        </div>

                                        <h3 style="color:#c8c10d;">@sp.TenSP</h3>
                                        <h3><i class="fa fa-money" aria-hidden="true"></i> @sp.GiaBan.Value.ToString("F0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))₫</h3>
                                    </div> 
                                        <a href="@Url.Action("Details", "SanPhams", new {id = sp.MaSP })"><input type="button" value="XEM CHI TIẾT" class="button" />  </a>
                               
                                 </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>


    
    <div class="top_brand">
        <center><img src="~/Data/tt1.png" /></center>
        <div class="tieude"><p>DANH MỤC NỔI BẬT</p></div>

            <br />
            <div class="container">
  
                    <div class="baoquanh">
                        @foreach (var item in Loai)
                        {
                            <a href="@Url.Action("ProductViewType","HomeLayout", new {MaLoai = item.MaLoai })">
                                <img src="@Url.Content("~/" + item.Anh)" width="340" height="340" alt="No Images" />
                            </a>
                        }
                    </div>
                    </div>

                </div>




}

