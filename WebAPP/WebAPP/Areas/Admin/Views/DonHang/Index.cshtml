@model PagedList.IPagedList<WebAPP.Models.DonHang>

@using PagedList;


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header {

    <center>QUẢN LÝ ĐƠN HÀNG</center>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <center>
                <span style="color:crimson;font-size:30px">
                    Danh sách đơn hàng
                </span>
            </center>
            <hr />
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "DonHang", FormMethod.Get))
                {
                  
                    <div class="row">
                        <div class="col-lg-12 col-lg-push-10">
 
                            
                        </div>
                    </div>

                }
                <br />

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Người mua</th>
                                <th>Tổng tiền</th>
                                <th>Ngày đặt</th>
                                <th>Ngày giao</th>
                                <th>Ghi chú</th>
                                <th>Tình trạng</th>
                                <th>Địa chỉ giao</th>
                                <th>Số điện thoại</th>
                                <th>Tùy chỉnh</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.MaDH">

                                    <td>@item.User.Hoten</td>
                                    <td>@item.TongTien</td> 
                                    <td>@item.NgayDat</td>
                                    <td>@item.NgayGiao</td>
                                    <td>@item.LuuY</td>
                                    <td>@item.TinhTrang</td>
                                    <td>@item.DiaChi</td>
                                    <td>@item.Sdt</td>
                                    <td>
                                        <a href="@Url.Action("Details", "DonHang", new { id = item.MaDH})">Xem chi tiết</a>
                                        <a href="@Url.Action("Edit", "DonHang", new { id = item.MaDH})" class="fa fa-pencil-square-o" title="Sửa"></a>
                                        @Html.ActionLink(" ", "Delete", new { id = @item.MaDH }, new { @onclick = "return DeleteConfirm()", @class = "fa fa-times", title = "Xoá" })
                                        <script type="text/javascript">
                                        function DeleteConfirm() {
                                            if (confirm("Bạn có muốn xóa?"))
                                                return true;
                                            else return false;

                                        }
                                        FocusEvent = false;
                                        checked = false;
                                        </script>
                                    </td>
                                </tr>
                            }



                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>

</div>
