
@{
    ViewBag.Title = "Tạo nhà cung cấp mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model WebAPP.Models.NhaCungCap
@section header{
    <center>QUẢN LÝ NHÀ CUNG CẤP</center>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <center>
            <span style="color:crimson;font-size:30px">
                Thêm sản nhà cung cấp mới
            </span>
        </center>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-3 control-label">Tên nhà cung cấp</label>
                <div class="col-sm-7">
                    @Html.EditorFor(model => model.TenNCC, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenNCC, "", new { @class = "text-danger" })
                    @ViewBag.ThongBao
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-3 control-label">Địa chỉ</label>
                <div class="col-sm-7">
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>
       
            <div class="form-group">
                <div class="col-md-4 col-md-push-3">
                    <a href="@Url.Action("Index", "NhaCungCap")" style="font-size:34px;"><i class="fa fa-arrow-circle-left" aria-hidden="true"></i></a>
                </div>
                <div class="col-md-5">
                    <input type="submit" value="Tạo" class="btn btn-success btn-lg" />

                </div>
            </div>





        </form>
    </div>
}


