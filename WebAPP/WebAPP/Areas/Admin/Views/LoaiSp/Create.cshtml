@model WebAPP.Models.LoaiSp
@{
    ViewBag.Title = "Chỉnh sửa nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header {

    <center>QUẢN LÝ LOẠI SẢN PHẨM </center>
}
@section jsFooter{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage').val(url);
            };
            finder.popup();
        })
    </script>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <center>
            <span style="color:crimson;font-size:30px">
                Thêm loại sản phẩm
            </span>
        </center>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-3 control-label">Tên loại sản phẩm</label>
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.TenLoai, new { htmlAttributes = new { @class = "form-control"  } })
                @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
                @ViewBag.ThongBao
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-3 control-label">Ảnh sản phẩm</label>
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.Anh, new { htmlAttributes = new { @class = "form-control", @id = "txtImage" }, id = "txtImage" })
                <a id="btnSelectImage" href="#">Chọn ảnh </a>
                @Html.ValidationMessageFor(model => model.Anh, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-3 col-md-push-2">
                <a href="/Admin/LoaiSp/Index" style="font-size:34px;"><i class="fa fa-arrow-circle-left" aria-hidden="true"></i></a>
            </div>
            <div class="col-md-5">
                <input type="submit" value="Tạo" class="btn btn-success btn-lg" />
            </div>
        </div>
    </div>
}


